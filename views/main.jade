    style.
      * { box-sizing: border-box; margin: 0; padding: 0; }
      body { font-family: Arial, sans-serif; display: flex; background: #f9fafb; color: #111; }

      .sidebar {
        width: 240px;
        background: #fff;
        height: 100vh;
        padding: 20px;
        border-right: 1px solid #e5e7eb;
        position: fixed; /* 新增固定定位 */
