      }
      .sidebar h2 { font-size: 20px; margin-bottom: 20px; }
      .sidebar nav p {
        margin: 10px 0;
        padding: 10px;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .sidebar nav p.active {
        background: #eef2ff;
        color: #4f46e5;
        font-weight: bold;
      }

      .main {
        flex: 1;
        display: flex;
        flex-direction: column;
        margin-left: 240px; /* 新增左边距 */
        margin-top: 60px;
        padding-top: 20px;
      }

      .header {
            position: fixed;  /* 固定定位 */
            top: 0;          /* 固定在顶部 */
            left: 240px;     /* 与左侧导航栏宽度一致 */
            right: 0;        /* 右侧对齐 */
