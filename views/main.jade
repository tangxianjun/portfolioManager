    script.
      // 主图表初始化
      const pieChart = echarts.init(document.getElementById('pie-chart'));
      
      // 加载动态数据并更新饼图
      async function loadPieChartData() {
        try {
          const response = await fetch('/wealth');
          const data = await response.json();
          const holdings = data.message;
          
          // 按sector分组并计算总value
          const sectorData = {};
          holdings.forEach(holding => {
            const sector = holding.sector || 'Unknown';
            const value = parseFloat(holding.value) || 0;
            sectorData[sector] = (sectorData[sector] || 0) + value;
          });
          
          // 转换为饼图数据格式
          const pieData = Object.entries(sectorData).map(([sector, value]) => ({
            name: sector,
            value: value
          }));
          
          // 更新饼图
      pieChart.setOption({
        title: { text: 'Asset Allocation', left: 'center' },
        tooltip: { trigger: 'item', formatter: '{b}: {d}%' },
        legend: { bottom: 0 },
        series: [{
          type: 'pie',
          radius: '50%',
              itemStyle: {
                color: function(params) {
                  // 根据行业名称设置颜色，与sector标签颜色一致
                  const colorMap = {
                    'Technology': '#3b82f6',    // 蓝色 - .tech
                    'Healthcare': '#ef4444',    // 红色 - .health
                    'Financial': '#10b981',     // 绿色 - .finance
                    'Consumer Goods': '#8b5cf6', // 紫色 - .consumer
                    'Energy': '#f59e0b',        // 橙色 - .energy
                    'Automotive': '#10b981',    // 绿色 - .auto
                    'Retail': '#8b5cf6'         // 紫色 - .retail
                  };
                  return colorMap[params.name] || '#6b7280'; // 默认灰色 - .other
                }
              },
              data: pieData
        }]
      });
        } catch (error) {
          console.error('Error loading pie chart data:', error);
        }
      }
      
      // 页面加载时获取数据
      loadPieChartData();
      setInterval(loadPieChartData, 10000); // 每10秒刷新

      const lineChart = echarts.init(document.getElementById('line-chart'));
      lineChart.setOption({
        title: { text: 'Portfolio Performance' },
        tooltip: { trigger: 'axis' },
