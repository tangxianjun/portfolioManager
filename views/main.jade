      .gain { color: green; font-size: 14px; }
      .loss { color: red; font-size: 14px; }

      .charts {
        display: flex;
        gap: 20px;
      }
      .chart-box {
        flex: 1;
        height: 300px;
        background: #fff;
        border-radius: 10px;
        padding: 10px;
      }

      table {
        width: 100%;
